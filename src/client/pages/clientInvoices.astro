
---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import InvoiceManager from '../components/clientInvoices/InvoiceManager';
---

<DashboardLayout>
    <InvoiceManager client:load />
</DashboardLayout>

<style is:global>
    /* --- INVOICES WRAPPER STYLES --- */
    /* Only styles that are NOT in DashboardLayout */
    
    /* --- HEADER (if simple override needed, mostly handled by component JSX styles but keep brand specific font overrides here to be safe) --- */
    .brand h1 {
        font-family: var(--font-display);
        font-size: clamp(2.5rem, 5vw, 4rem);
        text-transform: uppercase;
        line-height: 0.9;
        color: var(--accent);
    }

    .brand span {
        display: block;
        font-size: 1rem;
        color: #fff;
        letter-spacing: 2px;
        margin-top: 0.5rem;
    }

    /* --- CONTROLS --- */
    .controls {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 2rem;
    }

    .btn-primary {
        display: inline-block;
        padding: 1rem 2rem;
        background: var(--accent);
        color: #000;
        border: none;
        text-decoration: none;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 1px;
        transition: all 0.3s;
        font-family: var(--font-main);
        cursor: none; /* override default cursor */
    }

    .btn-primary:hover {
        background: #fff;
        color: #000;
    }

    /* --- CLIENT SECTION --- */
    .client-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 3rem;
        padding: 2rem;
        background: var(--surface);
        border: 1px solid var(--border);
        position: relative;
    }

    .client-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--accent);
    }

    .info-block.right-align {
        text-align: right;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .info-block h2 {
        font-family: var(--font-display);
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        color: #666;
        letter-spacing: 1px;
    }

    .info-block h3 {
        font-size: clamp(1.2rem, 3vw, 1.8rem);
        margin-bottom: 0.5rem;
        line-height: 1.2;
        color: #fff;
    }

    .info-block p {
        color: #aaa;
        font-size: 1rem;
    }

    /* --- INVOICE GRID --- */
    .invoice-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .invoice-card {
        background: var(--surface);
        border: 1px solid var(--border);
        padding: 2rem;
        position: relative;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 200px;
    }

    .invoice-card:hover {
        border-color: var(--accent);
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
    }

    .invoice-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 0%;
        background: var(--accent);
        transition: height 0.3s ease;
    }

    .invoice-card:hover::before {
        height: 100%;
    }

    .card-date {
        font-family: var(--font-display);
        font-size: 2rem;
        color: #fff;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        line-height: 1;
    }

    .card-year {
        font-size: 1.2rem;
        color: #888;
        margin-bottom: auto;
    }

    .card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px dashed var(--border);
    }

    .status-badge {
        padding: 0.2rem 0.8rem;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.9rem;
        border: 1px solid currentColor;
        display: inline-block;
    }

    .status-pending {
        color: orange;
        border-color: orange;
    }

    .status-paid {
        color: var(--accent);
        border-color: var(--accent);
    }

    .btn-delete {
        background: transparent;
        border: 1px solid #ff4444;
        color: #ff4444;
        padding: 0.5rem 1rem;
        text-transform: uppercase;
        font-weight: 600;
        font-size: 0.8rem;
        transition: all 0.2s;
        font-family: var(--font-main);
        cursor: none;
    }

    .btn-delete:hover {
        background: #ff4444;
        color: #fff;
    }

    /* --- MODAL --- */
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(5px);
        z-index: 10000;
        display: none;
        /* Hidden by default */
        justify-content: center;
        align-items: center;
        padding: 1rem;
    }

    .modal-backdrop.active {
        display: flex;
    }

    .modal-content {
        background: #050505;
        border: 2px solid var(--accent);
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 0 50px var(--accent-glow);
        animation: modalFadeIn 0.3s ease-out;
    }

    @keyframes modalFadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .modal-title {
        font-family: var(--font-display);
        font-size: 1.8rem;
        color: #fff;
        margin-bottom: 2rem;
        text-transform: uppercase;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        color: #888;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .form-control {
        width: 100%;
        padding: 1rem;
        background: var(--surface);
        border: 1px solid var(--border);
        color: #fff;
        font-family: var(--font-main);
        font-size: 1rem;
        outline: none;
    }

    .form-control:focus {
        border-color: var(--accent);
    }

    .form-row {
        display: flex;
        gap: 1rem;
    }

    .form-row .form-group {
        flex: 1;
    }

    .modal-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-secondary {
        background: transparent;
        border: 1px solid var(--accent);
        color: var(--accent);
        padding: 1rem 2rem;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 1px;
        transition: all 0.3s;
        font-family: var(--font-main);
        cursor: none;
    }

    .btn-secondary:hover {
        background: var(--accent);
        color: #000;
    }

    /* --- MOBILE RESPONSIVE --- */
    @media (max-width: 768px) {
        .container {
            padding: 1.5rem;
        }

        header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .controls {
            justify-content: flex-start;
        }

        .btn-primary {
            width: 100%;
            text-align: center;
        }

        /* Stack Client Section */
        .client-section {
            grid-template-columns: 1fr;
            padding: 1.5rem;
            gap: 2rem;
        }

        .info-block.right-align {
            text-align: left;
            /* Reset alignment */
            align-items: flex-start;
        }
    }
</style>
